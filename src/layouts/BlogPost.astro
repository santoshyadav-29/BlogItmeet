---
import {Image} from "astro:assets";
import {ViewTransitions} from 'astro:transitions';
// import type {CollectionEntry} from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';


type BlogPostType = "blog";

const {title, description, pubDate, heroImage, readingTime, slug} = Astro.props;
---

<html lang="en">
<head>
    <BaseHead title={title} description={description} image={heroImage}/>
    <ViewTransitions/>
</head>

<body>
<Header/>
<main class="max-w-2xl mx-auto px-4 sm:px-0">
    <article>
        <div>
            {heroImage &&
                    <Image src={heroImage}
                           alt={title}
                           width={800} height={450}
                           quality="high"
                           transition:name={slug}
                           class="rounded-xl shadow-lg shadow-primary-400"/>
            }
        </div>
        <div class="prose mx-auto pt-16">
            <div class="text-center sm:text-left">
                <h1 class="text-primary-500 mb-4">{title}</h1>
                <aside class="flex gap-x-2 text-base justify-center sm:justify-start">
                    <FormattedDate date={pubDate}/>
                    &bullet;
                    <div class="whitespace-nowrap">â˜• </div>
                </aside>
            </div>
            <hr class="my-12"/>
            <slot/>
        </div>
    </article>
</main>
<Footer/>

</body>
</html>

<style>
    img {
        max-width: 600px;
        height: auto;
        border-radius: 8px;
    }
</style>